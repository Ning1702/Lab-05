@model IEnumerable<Student>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@(s.DateOfBorth.ToShortDateString())</td>

                @{
                    string str = "";
                    switch (s.Branch)
                    {
                        case Branch.IT: str = "CNTT"; break;
                        case Branch.BE: str = "Kinh tế"; break;
                        case Branch.CE: str = "Công trình"; break;
                        case Branch.EE: str = "Điện - Điện tử"; break;
                    }
                }

                <td>@str</td>
                <td>@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- PHÂN TRANG -->
<ul class="pagination">
    @for (int i = 1; i <= ViewBag.pageNum; i++)
    {
        <li class="page-item" page="@i">
            <a class="page-link">@i</a>
        </li>
    }
</ul>
